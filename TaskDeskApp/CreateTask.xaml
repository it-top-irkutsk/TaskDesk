<Window x:Class="TaskDeskApp.CreateTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskDeskApp"
        mc:Ignorable="d"
        Title="CreateTask" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Text="name" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1"/>
        <TextBox Text="id" TextWrapping="Wrap" Grid.Column="1"/>

        <TextBox Text="execution_date" TextWrapping="Wrap" Grid.Column="1" Grid.Row="3" Margin="0,30,0,0" Grid.RowSpan="2" Cursor="IBeam"/>
        <TextBox TextWrapping="Wrap" Grid.Column="1" Grid.Row="4" Margin="0,30,0,0" Grid.RowSpan="2" Text="status"/>
        <TextBox Text="priority" TextWrapping="Wrap" Grid.Column="1" Grid.Row="5" Margin="0,30,0,0" Grid.RowSpan="2"/>
        <TextBox Text="is_deleted" TextWrapping="Wrap" Grid.Column="1" Grid.Row="6" Margin="0,30,0,0" Grid.RowSpan="2"/>
        <TextBlock Text="id" TextWrapping="Wrap" Margin="0,2,0,0"/>
        <TextBlock Text="name" TextWrapping="Wrap" Margin="0,0,0,2" Grid.Row="1"/>
        <TextBlock Text="creation_date" TextWrapping="Wrap" Margin="0,1,0,1" Grid.Row="3"/>
        <TextBlock Text="execution_date" TextWrapping="Wrap" Margin="0,29,0,3" Grid.RowSpan="2" Grid.Row="3"/>
        <TextBlock Text="status" TextWrapping="Wrap" Margin="0,30,0,2" Grid.Row="4" Grid.RowSpan="2"/>
        <TextBlock Text="priority" TextWrapping="Wrap" Margin="0,30,0,2" Grid.RowSpan="2" Grid.Row="5"/>
        <TextBlock TextWrapping="Wrap" Margin="0,1,0,1" Grid.Row="7"><Run Text="is_deleted"/><LineBreak/><Run/></TextBlock>
        <TextBlock Text="description" TextWrapping="Wrap" Margin="0,0,0,29" Grid.Row="2" Grid.RowSpan="2"/>
        <TextBox Text="description" TextWrapping="Wrap" Grid.Column="1" Grid.Row="2" Margin="0,0,0,4" Cursor="IBeam"/>
        <TextBox Text="creation_date" TextWrapping="Wrap" Grid.Column="1" Grid.Row="3" Margin="0,1,0,2" Cursor="IBeam"/>
        <Button Content="удалить" Grid.Column="1" HorizontalAlignment="Left" Margin="0,60,0,0" Grid.Row="7" VerticalAlignment="Top" Height="43" Width="133" Click="Button_Click" Cursor="Hand"/>
        <Button Content="создать" Grid.Column="1" HorizontalAlignment="Left" Margin="517,61,0,0" Grid.Row="7" VerticalAlignment="Top" Height="43" Width="133" Click="Button_Click" Cursor="Hand"/>

    </Grid>
</Window>
